<div class="container">
  <h1 class="display-12 heading">&nbsp;&nbsp;All the Activities</h1>
   <div class="row">
     <div class="col-md-4">
       <%= render 'posts/lignups_sm' %>
     </div>
     <div class="col-md-8">
      <div class="card w-200 mx-auto mt-4 shadow-lg">
        <div class="row">
          <% @posts.each do |post| %>
          <div class="col-md-4">
            <%= attachment_image_tag post, :image, format: 'jpeg', size: "250x250" %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                  <%= link_to post_path(post) do %>
                    <p>Title：<%= post.title %></p>
                  <% end %>
                </h5>
                <p class="card-text">
                  <p>Contents of Activities：<%= post.body %></p>
                </p>
                <p class="card-text">
                   <p>Category:
                      <% post.categories.each do |category| %>
                      <%= link_to category.name, category_path(category) %>
                      <% end %>
                   </p>
                </p>
                <p class="card-text">
                  <p>Posted by：<%= link_to post.user.name, user_path(post.user) %></p>
                  <p> <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></p>
                  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
                </p>
              </div>
            </div>
          <% end %>
          
        
         

        </div>
      </div>
           <div id="pagination">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item">
                  <p><%= paginate @posts %></p>
                </li>
              </ul>
            </nav>
          </div>
     </div>
  
  </div>
</div>

<style>
  .heading {
    margin-top: 20px;
    margin-bottom: 50px;
  }

/*以下、ページネーション*/
#pagination {
  text-align: right;
  margin-top: 10px;
}
/*ページネーション自体のデザイン*/
.pagination>li>a {          
  border: none;     /*枠線をなくす*/
  color: #696969;   /*文字の色を変える*/
}

/* 表示しているページ番号のデザイン */
.pagination>.active>a {     
  background: #93c9ff;     /*背景の色を変える*/
  border-radius: 15px;     /*角を丸くする*/
}

/*ホバー時のデザイン*/
.pagination>li>a:hover {        
  border-radius: 15px;    /*角を丸くする*/
}
</style>