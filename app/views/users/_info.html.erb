<table class='table'>
  <tr><div id="image"><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></div></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>


</table>

<div class='follow'>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-info" %>
    <% else %>
      <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
    <% end %>
  <% else %>
    <% if @user.id == current_user.id %>
      <%= link_to 'Edit my profile',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
    <% end %>
  <% end %>
</div>

<style>
  #image {
    margin-bottom: 30px;
  }
  
  .follow {
    text-align: center;
    margin-top: 20px;
  }
</style>