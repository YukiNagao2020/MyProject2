<div class="container content">
    <div>
      <h3>お問い合わせフォーム</h3>
      <%= form_with model: @contact, local:true do |f| %>
        <%= f.label :"お名前"%><br>
         <%= f.text_field :name %><br>
        <%= f.label :"メールアドレス"%><br>
         <%= f.email_field :email %><br>
        <%= f.label :"お問合せ内容"%><br>
         <%= f.text_area :message, rows:7,cols:40 %>
      <div class="submit">
        <%= f.submit "送信", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
  
  <style>
    .content {
      padding: 20px;
      text-align: center;
    }
    
    h3 {
      margin-bottom: 20px;
    }
    
    .submit {
      margin: 10px
    }
  </style>
  
  